<div class="container">
  <div class="row">
    <div class="col-md-6 col-md-3">
      <h1 class="text-center">Restaurants</h1>
      <p class="text-center"><%= link_to "Add a new restaurant", new_restaurant_path, class: "btn btn-success" %></p>
      <% @restaurants.each do |restaurant| %>
        <div class="restaurant">
          <h2><%= restaurant.name %></h2>
          <p>Cuisine: <%= restaurant.category.capitalize %></p>
          <%= link_to "See details", restaurant_path(restaurant), class: "btn btn-primary"%>
          <% end %>
        </div>
    </div>
  </div>
</div>




