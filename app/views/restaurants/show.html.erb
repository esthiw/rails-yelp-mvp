<div class="container">
  <div class="row">
    <div class="col-md-6 col-md-offset-3">
      <h1 class="text-center"><%= @restaurant.name %></h1>
      <div class="restaurant_info">
        <h3>Cuisine: <%= @restaurant.category.capitalize %></h2>
        <p>Find Us At: <%= @restaurant.address%></p>
          <% if @restaurant.phone_number%>
            <p>Questions? Give us a call! <% restaurant.phone_number %></p>
          <% end %>
        <p><%= link_to "Leave a review", new_restaurant_review_path(@restaurant), class: "btn btn-success" %></p>
      </div>
      <p class="text-center"><%= link_to 'Go back', restaurants_path, class: 'btn btn-link' %><p>
    </div>
  </div>
</div>
